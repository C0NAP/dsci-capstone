@using BlazorApp.Models

<div @onclick="() => OnClick.InvokeAsync(Node)"
     style="width:50px; height:50px; border-radius:50%; background:#3498db;
            display:flex; align-items:center; justify-content:center; color:white; cursor:pointer;">
    @Node.Label
</div>

@code {
    [Parameter] public NeoNode Node { get; set; }
    [Parameter] public EventCallback<NeoNode> OnClick { get; set; }
}
